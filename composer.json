{
    "name": "vegasshop/ecommerce",
    "description": "Vegas Shop E-commerce Application",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Vegas Shop Team",
            "email": "dev@vegasshop.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "VegasShop\\": "src/"
        },
        "files": [
            "config/connection.php",
            "src/utils/Logger.php",
            "src/utils/ErrorHandler.php",
            "src/utils/Validator.php",
            "src/utils/Cache.php",
            "src/utils/SecurityHeaders.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "VegasShop\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs --standard=PSR12 src/",
        "cs-fix": "phpcbf --standard=PSR12 src/",
        "stan": "phpstan analyse src/",
        "quality": [
            "@cs-check",
            "@stan",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
